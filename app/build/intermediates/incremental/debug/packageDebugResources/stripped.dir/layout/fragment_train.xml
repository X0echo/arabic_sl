<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:padding="20dp">

        <Space
            android:id="@+id/topSpacer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/train_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_trainFr"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/topSpacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Letters Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_letters"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#2D2D2D"
            app:layout_constraintTop_toBottomOf="@id/train_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="14dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_letters"
                    app:tint="#2196F3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lettreTxt"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sub_lettre"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lettersButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="-100dp"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="تدريب الحروف"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Numbers Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_numbers"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#2D2D2D"
            app:layout_constraintTop_toBottomOf="@id/card_letters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="14dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_numbers"
                    app:tint="#FF9800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numbers_txt"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعلم إشارات الأرقام من ٠ إلى ٩"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/numbersButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="-100dp"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="تدريب الأرقام"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Words Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_words"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#2D2D2D"
            app:layout_constraintTop_toBottomOf="@id/card_numbers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="14dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_letters"
                    app:tint="#03A9F4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/words_txt"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعلم إشارات الكلمات الشائعة"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/wordsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="-100dp"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="الكلمات"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Challenges Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_challenges"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#2D2D2D"
            app:layout_constraintTop_toBottomOf="@id/card_words"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="14dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_challenges"
                    app:tint="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chaleng_txt"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اختبر مهاراتك مع تحديات لغة الإشارة"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/challengesButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="-100dp"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="تدريب التحديات"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quiz Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_quiz"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#2D2D2D"
            app:layout_constraintTop_toBottomOf="@id/card_challenges"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="14dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_letters"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_txt"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اختبر نفسك بأسئلة عن لغة الإشارة"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/quizButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="-100dp"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="الاختبار"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
